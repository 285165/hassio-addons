{
  "name": "Nextcloud",
  "url": "https://github.com/alexbelgium/hassio-addons/tree/master/nextcloud",
  "version": "23.0.0-7",
  "upstream": "23.0.0",
  "slug": "nextcloud_ocr",
  "ingress": false,
  "hassio_api": true,
  "ingress_port": 0,
  "arch": ["aarch64", "amd64", "armv7"],
  "description": "Nextcloud for Home Assistant",
  "boot": "manual",
  "uart": true,
  "map": ["share:rw", "media:rw", "ssl:rw"],
  "ports": {
    "443/tcp": 8099,
    "80/tcp": null
  },
  "environment": {},
  "webui": "https://[HOST]:[PORT:443]",
  "panel_icon": "mdi:nextcloud",
  "options": {
    "PUID": 1000,
    "PGID": 1000,
    "use_own_certs": false,
    "certfile": "fullchain.pem",
    "keyfile": "privkey.pem",
    "data_directory": "/share/nextcloud",
    "trusted_domains": "your-domain, your-domain2",
    "OCR": false,
    "OCRLANG": "fra",
    "Full_Text_Search": false,
    "elasticsearch_server": "<ip:port>"
  },
  "services": ["mysql:want"],
  "schema": {
    "PUID": "int",
    "PGID": "int",
    "use_own_certs": "bool",
    "certfile": "str",
    "keyfile": "str",
    "data_directory": "str",
    "OCR": "bool?",
    "OCRLANG": "str?",
    "Full_Text_Search": "bool?",
    "elasticsearch_server": "str?",
    "trusted_domains": "str?",
    "TZ": "str?"
  }
}
