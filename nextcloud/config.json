{
  "name": "Nextcloud",
  "url": "https://github.com/alexbelgium/hassio-addons/tree/master/nextcloud",
  "version": "23.0.0-10",
  "upstream": "23.0.0",
  "slug": "nextcloud_ocr",
  "devices": [
    "/dev/mmcblk0p8",
    "/dev/sda",
    "/dev/sdb",
    "/dev/sdc",
    "/dev/sdd",
    "/dev/sde",
    "/dev/sdf",
    "/dev/sdg",
    "/dev/nvme",
    "/dev/mmcblk",
    "/dev/sda1",
    "/dev/sdb1",
    "/dev/sdc1",
    "/dev/sdd1",
    "/dev/sde1",
    "/dev/sdf1",
    "/dev/sdg1",
    "/dev/sda2",
    "/dev/sdb2",
    "/dev/sdc2",
    "/dev/sdd2",
    "/dev/sde2",
    "/dev/sdf2",
    "/dev/sdg2",
    "/dev/sda3",
    "/dev/sdb3",
    "/dev/sda4",
    "/dev/sdb4",
    "/dev/nvme0",
    "/dev/nvme1",
    "/dev/nvme2"
  ],
  "privileged": [
    "SYS_ADMIN",
    "DAC_READ_SEARCH"
  ],
  "ingress": false,
  "hassio_api": true,
  "ingress_port": 0,
  "arch": ["aarch64", "amd64", "armv7"],
  "description": "Nextcloud for Home Assistant",
  "boot": "manual",
  "uart": true,
  "map": ["share:rw", "media:rw", "ssl:rw"],
  "ports": {
    "443/tcp": 8099,
    "80/tcp": null
  },
  "environment": {},
  "webui": "https://[HOST]:[PORT:443]",
  "panel_icon": "mdi:nextcloud",
  "options": {
    "PUID": 1000,
    "PGID": 1000,
    "use_own_certs": false,
    "certfile": "fullchain.pem",
    "keyfile": "privkey.pem",
    "data_directory": "/share/nextcloud",
    "trusted_domains": "your-domain, your-domain2",
    "OCR": false,
    "OCRLANG": "fra",
    "Full_Text_Search": false,
    "elasticsearch_server": "<ip:port>"
  },
  "services": ["mysql:want"],
  "schema": {
    "PUID": "int",
    "PGID": "int",
    "use_own_certs": "bool",
    "certfile": "str",
    "keyfile": "str",
    "data_directory": "str",
    "OCR": "bool?",
    "OCRLANG": "str?",
    "Full_Text_Search": "bool?",
    "elasticsearch_server": "str?",
    "trusted_domains": "str?",
    "TZ": "str?"
  }
}
